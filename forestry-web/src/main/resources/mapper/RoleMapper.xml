<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lym.system.mapper.RoleMapper">

    <select id="getRoles" resultType="com.lym.system.entity.Role">
        SELECT
            r.id,
            r.`name`,
            r.nameZh
        FROM
            t_role AS r
                LEFT JOIN t_admin_role AS ar ON ar.rid = r.id
        WHERE
            ar.adminId = #{adminId}
    </select>
    <select id="getEmployee" resultType="com.lym.system.entity.Employee">
        SELECT
            e.id,
            e.idCard,
               e.departmentId,
               e.minister
        FROM
            t_employee AS e
        WHERE
            e.idCard = #{idCard}
    </select>
</mapper>
